{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm generate && tsc && npx mikro-orm-esm cache:generate --combined && cp src/generated/combined-schema.graphql dist/generated/",
    "start": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/server.ts",
    "start:watch": "nodemon --watch src --ext ts --exec 'node --no-warnings=ExperimentalWarning --loader ts-node/esm src/server.ts'",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:debug": "TEST_LOG_LEVEL=debug vitest run",
    "test:debug:watch": "TEST_LOG_LEVEL=debug vitest",
    "lint": "eslint src && tsc -b",
    "make-demo-db": "npx mikro-orm-esm migration:fresh --drop-db --seed DemoSeeder",
    "migration:up": "mikro-orm-esm migration:up",
    "generate": "graphql-codegen && gql.tada generate-output",
    "regenerate-thumbnails": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/scripts/regenerate-thumbnails.ts",
    "recompute-dimensions": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/scripts/recompute-image-dimensions.ts",
    "watch-schema": "node --no-warnings=ExperimentalWarning --loader ts-node/esm scripts/watch-schema.ts"
  },
