{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc && npx mikro-orm-esm cache:generate --combined && pnpm make-sdk",
    "generate-openapi": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/generate-openapi.ts",
    "start": "node --no-warnings=ExperimentalWarning --loader ts-node/esm src/server.ts",
    "start:watch": "nodemon --watch src --ext ts --exec 'node --no-warnings=ExperimentalWarning --loader ts-node/esm src/server.ts'",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src && tsc -b",
    "make-demo-db": "npx mikro-orm-esm migration:fresh --drop-db --seed DemoSeeder",
    "make-sdk": "pnpm generate-openapi && openapi-ts -i dist/openapi.json -o src/sdk -c @hey-api/client-axios && pnpm prettier -w src/sdk",
    "migration:up": "mikro-orm-esm migration:up",
    "generate": "graphql-codegen",
    "generate:watch": "graphql-codegen --watch"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/jwt": "^9.0.4",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/response-validation": "^3.0.3",
    "@fastify/session": "^11.1.0",
    "@fastify/static": "^8.1.0",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@hey-api/client-axios": "^0.6.1",
    "@mikro-orm/core": "^6.4.6",
    "@mikro-orm/migrations": "^6.4.6",
    "@mikro-orm/postgresql": "^6.4.6",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@types/graphql-type-json": "^0.3.5",
    "argon2": "^0.41.1",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "fastify": "link:@apollo/server/fastify",
    "graphql": "^16.10.0",
    "graphql-type-json": "^0.3.2",
    "html-to-text": "^9.0.5",
    "memoizee": "^0.4.17",
    "nodemailer": "^6.10.0",
    "pino": "^9.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-pattern": "^5.6.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript": "^4.1.5",
    "@graphql-codegen/typescript-resolvers": "^4.4.4",
    "@hey-api/openapi-ts": "^0.64.4",
    "@mikro-orm/cli": "^6.4.6",
    "@mikro-orm/reflection": "^6.4.6",
    "@mikro-orm/seeder": "^6.4.6",
    "@parcel/watcher": "^2.5.1",
    "@types/html-to-text": "^9.0.4",
    "@types/memoizee": "^0.4.11",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/slug": "^5.0.9",
    "eslint": "^9.20.1",
    "eslint-typescript": "^1.1.0",
    "graphql-codegen-typescript-common": "0.18.2",
    "graphql-codegen-typescript-react-apollo": "0.18.2",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^2.1.9"
  }
}
